<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBD7B7"
        tools:context="unithon.bechef.ui.SelectActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

    <ImageView
            android:id="@+id/search01"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_01"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fkjfdlsajfdj"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#000"
            android:id="@+id/search02"
            android:layout_below="@id/search01"/>

    <ImageView
            android:layout_below="@id/search02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/search03"
            android:src="@mipmap/search_02"/>

    <android.support.v7.widget.GridLayout
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search03"
            android:padding="12dp"
            app:columnCount="2"
            app:rowCount="1">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/search04"
                app:layout_columnWeight="1"
                android:layout_marginRight="10dp"
                android:src="@mipmap/search_03"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/search05"
                app:layout_columnWeight="1"
                android:src="@mipmap/search_04"/>
    </android.support.v7.widget.GridLayout>
</RelativeLayout>
