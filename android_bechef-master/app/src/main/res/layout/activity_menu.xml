<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="unithon.bechef.ui.MenuActivity">

    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rowCount="4"
            app:columnCount="2">
        <ImageButton
                android:id="@+id/btn_menu_select1"
                android:gravity="center"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        <ImageButton
                android:id="@+id/btn_menu_select2"
                android:textAlignment="center"
                android:gravity="center"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        <ImageButton
                android:id="@+id/btn_menu_select3"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        <ImageButton
                android:id="@+id/btn_menu_select4"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        <ImageButton
                android:id="@+id/btn_menu_select5"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        <ImageButton
                android:id="@+id/btn_menu_select6"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>


    </android.support.v7.widget.GridLayout>

</LinearLayout>
