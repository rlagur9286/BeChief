<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="unithon.bechef.ui.SelectPictureActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

    <LinearLayout
            android:id="@+id/select_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="70dp">

        <ImageView
                android:id="@+id/activity_select_main01"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="30dp"
                android:src="@mipmap/main_01"/>

        <ImageView
                android:id="@+id/activity_select_main02"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="30dp"
                android:src="@mipmap/main_02"/>

        <ImageView
                android:id="@+id/activity_select_main03"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/main_03"/>

        <ImageView
                android:id="@+id/activity_select_main04"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:src="@mipmap/main_04"/>
    </LinearLayout>

    <com.felipecsl.gifimageview.library.GifImageView
            android:id="@+id/activity_select_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
</RelativeLayout>
